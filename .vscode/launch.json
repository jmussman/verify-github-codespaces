    "version": "0.2.0",
    "configurations": [

        {
            "name": "Launch SPA App",
            "request": "launch",
            "type": "node",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Launch SPA App in Codespace",
            "request": "launch",
            "type": "node",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev-codespace"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}